                <h4>WreckReport</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.WreckValue, htmlAttributes: new { @class = "control-label col-md-2" })
